---
import { ListView } from '../../components/list-view';
import MainLayout from '../../components/main-layout.astro';
import { reader } from '../../keystatic/reader';
import { sortEntries } from '../../lib/get-sorted-entries';

const tutorials = await reader.collections.tutorials.all();

const posts = sortEntries([
	...tutorials.map((tutorial) => ({
		...tutorial,
		category: 'tutorials',
		href: `tutorials/${tutorial.slug}`,
	})),
]);
---

<MainLayout title="Tutorials">
	<ListView posts={posts} />
</MainLayout>
