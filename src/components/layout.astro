---
import '@fontsource/press-start-2p';
import '../styles/global.css';

import { ClientRouter } from 'astro:transitions';

import { AUTHOR_NAME, SITE_DESCRIPTION, SITE_TITLE } from '../config';
import HeaderLink from './header-link.astro';

type Props = {
	description?: string;
	image?: string;
	title?: string;
};

const {
	description = SITE_DESCRIPTION,
	image = '/placeholder-social.jpg',
	title = SITE_TITLE,
} = Astro.props;
---

<!doctype html>
<html lang="en-AU">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />

		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.url)} />

		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.url)} />
		<ClientRouter />
	</head>

	<body>
		<header class="border-green-light text-green-light border-t-8 px-4">
			<div class="mx-auto w-full max-w-3xl pt-24">
				<a
					href="/"
					class="font-display text-center text-5xl leading-[1.25] uppercase"
				>
					<h2>{SITE_TITLE}</h2>
				</a>
				<div class="pt-8 pb-12">
					<div
						class="border-green-light flex flex-wrap items-center justify-between border-b-8 text-lg"
					>
						<nav class="flex flex-wrap">
							<HeaderLink href="/facts">Facts</HeaderLink>
							<HeaderLink href="/videos">Videos</HeaderLink>
							<HeaderLink href="/tutorials">Tutorials</HeaderLink>
						</nav>
						<span>
							by {AUTHOR_NAME}
						</span>
					</div>
				</div>
			</div>
		</header>

		<main class="px-4">
			<div class="prose bg-green-light mx-auto w-full max-w-3xl px-4 py-12">
				<slot />
			</div>
		</main>

		<footer class="mt-auto pt-4">
			<div
				class="mx-auto flex w-full max-w-3xl flex-wrap items-center justify-between bg-black/50 p-4 text-white"
			>
				<span>
					<a href="#TOP" class="text-white hover:text-gray-300">Back to top ^</a
					>
				</span>
				<span>&copy; {new Date().getFullYear()}{' '}{AUTHOR_NAME}</span>
			</div>
		</footer>
	</body>
</html>
